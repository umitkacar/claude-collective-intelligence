# =============================================================================
# AI Agent Orchestrator - Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# RabbitMQ Configuration
# -----------------------------------------------------------------------------
RABBITMQ_URL=amqp://admin:admin123@localhost:5672
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123
RABBITMQ_VHOST=/

# -----------------------------------------------------------------------------
# PostgreSQL Configuration
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=aiagent
POSTGRES_PASSWORD=aiagent123
POSTGRES_DB=ai_orchestrator
DATABASE_URL=postgresql://aiagent:aiagent123@localhost:5432/ai_orchestrator

# Database Client Settings (for db-client.js)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_orchestrator
DB_USER=aiagent
DB_PASSWORD=aiagent123
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000
DB_STATEMENT_TIMEOUT=60000
DB_QUERY_TIMEOUT=60000

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_URL=redis://:redis123@localhost:6379

# -----------------------------------------------------------------------------
# Development Tools (UI Access)
# -----------------------------------------------------------------------------
# Adminer (Lightweight DB UI)
ADMINER_PORT=8080

# PgAdmin (Advanced PostgreSQL UI)
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@aiagent.local
PGADMIN_PASSWORD=admin123

# Redis Commander (Redis UI)
REDIS_COMMANDER_PORT=8081
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin123

# -----------------------------------------------------------------------------
# Agent Configuration
# -----------------------------------------------------------------------------
AGENT_ID=agent-${RANDOM}
AGENT_TYPE=worker
AGENT_NAME=Claude-Agent-1
NODE_ENV=development

# -----------------------------------------------------------------------------
# Queue Configuration
# -----------------------------------------------------------------------------
TASK_QUEUE=agent.tasks
BRAINSTORM_EXCHANGE=agent.brainstorm
RESULT_QUEUE=agent.results
STATUS_EXCHANGE=agent.status

# -----------------------------------------------------------------------------
# Monitoring & Health
# -----------------------------------------------------------------------------
HEARTBEAT_INTERVAL=30000
HEALTH_CHECK_INTERVAL=10000
MESSAGE_TIMEOUT=300000

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
AUTO_RECONNECT=true
PERSISTENT_MESSAGES=true
PREFETCH_COUNT=1
ENABLE_COLLECTIVE_INTELLIGENCE=true
ENABLE_VOTING_SYSTEM=true

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FILE=./logs/orchestrator.log
